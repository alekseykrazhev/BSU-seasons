@model lab1.Models.Roster

@{
    ViewData["Title"] = "Select";
}

<style>
    body {
        text-align: center;
    }

    form {
        display: inline-block;
    }

    h1{
        margin-top:20px;
    }
</style>

<body>

</body>

<h1>Select players from roster</h1>
<hr/>
<div align="center">
    <div>
        <form asp-action="Select" method="post">
            <div class="form-group">
                <label class="control-label">Position to select: </label>
                <input asp-for="position" class="form-control" name="position"/>
            </div>
            <div class="form-group">
                <label class="control-label">From the date:</label>
                <input type="date"  class="form-control" name="startDate" />
                <br />
                <label class="control-label">Until the date:</label>
                <input type="date" class="form-control" name="endDate"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
